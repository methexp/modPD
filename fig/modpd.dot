        labeljust = "c";
        style = "";
        color = black;
        fillcolor = lightgrey;
        label = <<I>US valence<BR />or attitude?</I>>;
        fontsize = 14;

        subgraph cluster_41 {
            labeljust = "c";
            style = "filled";
            fillcolor = lightgrey;
            label = "Memory";
            fontsize = 14;
            
            
            node [shape = box, fontname = Helvetica, style = "bold,filled", fillcolor = white, width = 1.35, height = 0.5]
